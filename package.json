{
	"name": "svelte-persistent",
	"description": "Svelte writables for local & session storage",
	"license": "MIT",
	"homepage": "https://leodog896.github.io/svelte-persistent",
	"author": {
		"name": "Tristan F.",
		"email": "leodog896@gmail.com"
	},
	"repository": "github:LeoDog896/svelte-persistent",
	"bugs": {
		"url": "https://github.com/LeoDog896/svelte-persistent/issues",
		"email": "leodog896@gmail.com"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"svelte",
		"persist",
		"local",
		"session"
	],
	"version": "1.0.2",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.25.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.24.1",
		"@sveltejs/package": "^2.2.2",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"publint": "^0.1.16",
		"svelte": "^4.2.0",
		"svelte-check": "^3.4.6",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.6.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.7"
	},
	"peerDependencies": {
		"svelte": ">=4.0.0"
	},
	"type": "module"
}
